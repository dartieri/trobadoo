@model trobadoo.com.web.Models.Contact.ValuateContactModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="http://blueimp.github.io/Gallery/css/blueimp-gallery.min.css">
<div class="contFormContacto">
    <h2 class="tituloDestacado mb-5">
        @Model.GetTranslation("1")
    </h2>
    <span class="txtMedio visible">@Model.GetTranslation("2")<br />
        @Model.GetTranslation("3") </span>
    <form id="formValuate" name="formValuate" action="/AjaxSendMail" method="POST" role="form" enctype="multipart/form-data"
    class="mv-20">
    <input type="hidden" id="action" name="action" value="sendValuateMail" />
    <input type="hidden" id="languageCode" name="languageCode" value="@Model.LanguageCode" />
    <input type="hidden" id="languageCode" name="photoToken" value="@Model.PhotoToken" />
    <span class="titulo gris">@Model.GetTranslation("4") </span>
    <div class="contValoracionDatos">
        <div class="row">
            <!-- Nombre -->
            <div class="col-xs-12 col-sm-6 form-group">
                <label for="inputContactName" class="txtMedio bold hidden">
                    @Model.GetTranslation("5") *</label>
                <div class="input-group">
                    <input id="inputContactName" name="inputContactName" type="text" class="form-control input-lg"
                        placeholder="@Model.GetTranslation("5") *">
                    <div class="input-group-addon">
                        <i class="fa fa-user fa-lg"></i>
                    </div>
                </div>
            </div>
            <!-- Apellidos -->
            <div class="col-xs-12 col-sm-6 form-group">
                <label for="inputContactSurnames" class="txtMedio bold hidden">
                    @Model.GetTranslation("6") *</label>
                <div class="input-group">
                    <input id="inputContactSurnames" name="inputContactSurnames" type="text" class="form-control input-lg"
                        placeholder="@Model.GetTranslation("6") *">
                    <div class="input-group-addon">
                        <i class="fa fa-user fa-lg"></i>
                    </div>
                </div>
            </div>
            <!-- E-mail -->
            <div class="col-xs-12 col-sm-6 form-group">
                <label for="inputContactMail" class="txtMedio bold hidden">
                    @Model.GetTranslation("7") *</label>
                <div class="input-group">
                    <input id="inputContactMail" name="inputContactMail" type="text" class="form-control input-lg"
                        placeholder="@Model.GetTranslation("7") *">
                    <div class="input-group-addon">
                        <i class="fa fa-envelope-o fa-lg"></i>
                    </div>
                </div>
            </div>
            <!-- Confirma e-mail -->
            <div class="col-xs-12 col-sm-6 form-group">
                <label for="inputContactConfMail" class="txtMedio bold hidden">
                    @Model.GetTranslation("8") *</label>
                <div class="input-group">
                    <input id="inputContactConfMail" name="inputContactConfMail" type="text" class="form-control input-lg"
                        placeholder="@Model.GetTranslation("8") *">
                    <div class="input-group-addon">
                        <i class="fa fa-envelope-o fa-lg"></i>
                    </div>
                </div>
            </div>
            <!-- Teléfono fijo -->
            <div class="col-xs-12 col-sm-6 form-group">
                <label for="inputContactPhone" class="txtMedio bold hidden">
                    @Model.GetTranslation("9")</label>
                <div class="input-group col-xs-9 col-sm-8 col-md-6">
                    <input id="inputContactPhone" name="inputContactPhone" type="text" class="form-control input-lg"
                        placeholder="@Model.GetTranslation("9")">
                    <div class="input-group-addon">
                        <i class="fa fa-phone fa-lg"></i>
                    </div>
                </div>
            </div>
            <!-- Teléfono móvil -->
            <div class="col-xs-12 col-sm-6 form-group">
                <label for="inputContactCell" class="txtMedio bold hidden">
                    @Model.GetTranslation("10")</label>
                <div class="input-group col-xs-9 col-sm-8 col-md-6">
                    <input id="inputContactCell" name="inputContactCell" type="text" class="form-control input-lg"
                        placeholder="@Model.GetTranslation("10")">
                    <div class="input-group-addon">
                        <i class="fa fa-mobile fa-lg"></i>
                    </div>
                </div>
            </div>
            <!-- Dirección -->
            <div class="col-xs-12 col-sm-12 form-group">
                <label for="inputContactAddress" class="txtMedio bold hidden">
                    @Model.GetTranslation("11")</label>
                <textarea id="inputContactAddress" name="inputContactAddress" class="form-control input-lg"
                    rows="2" placeholder="@Model.GetTranslation("11")"></textarea>
            </div>
            <!-- Código Postal -->
            <div class="col-xs-12 col-sm-6 form-group">
                <label for="inputContactPostCode" class="txtMedio bold hidden">
                    @Model.GetTranslation("12")</label>
                <div class="input-group col-xs-9 col-sm-8 col-md-6">
                    <input id="inputContactPostCode" name="inputContactPostCode" type="text" class="form-control input-lg"
                        placeholder="@Model.GetTranslation("12")">
                    <div class="input-group-addon">
                        <i class="fa fa-barcode fa-lg"></i>
                    </div>
                </div>
            </div>
            <!-- Ciudad -->
            <div class="col-xs-12 col-sm-6 form-group">
                <label for="inputContactCityName" class="txtMedio bold hidden">
                    @Model.GetTranslation("13")</label>
                <div class="input-group">
                    <input id="inputContactCityName" name="inputContactCityName" type="text" class="form-control input-lg"
                        placeholder="@Model.GetTranslation("13")">
                    <div class="input-group-addon">
                        <i class="fa fa-map-marker fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <span class="titulo gris">@Model.GetTranslation("14")</span>
    <div class="contValoracionDescripcion">
        <div class="row">
            <!-- Descripción -->
            <div class="col-xs-12 col-sm-12 form-group">
                <label for="inputContactDesc" class="txtMedio bold hidden">
                    @Model.GetTranslation("15") *</label>
                <div class="input-group">
                    <input id="inputContactDesc" name="inputContactDesc" type="text" class="form-control input-lg"
                        placeholder="@Model.GetTranslation("15") *">
                    <div class="input-group-addon">
                        <i class="fa fa-info fa-lg"></i>
                    </div>
                </div>
            </div>
            <!-- Año compra -->
            <div class="col-xs-12 col-sm-6 form-group">
                <label for="inputContactBuyYear" class="txtMedio bold hidden">
                    @Model.GetTranslation("16") *</label>
                <div class="col-xs-9 col-sm-8 p-0">
                    <select id="inputContactBuyYear" name="inputContactBuyYear" class="form-control input-lg">
                        @Html.Raw(Model.DisplayYears())
                    </select>
                </div>
            </div>
            <!-- Precio compra -->
            <div class="col-xs-12 col-sm-6 form-group">
                <label for="inputContactBuyPrice" class="txtMedio bold hidden">
                    @Model.GetTranslation("17") *</label>
                <div class="input-group col-xs-9 col-sm-8">
                    <input id="inputContactBuyPrice" name="inputContactBuyPrice" type="text" class="form-control input-lg"
                        placeholder="@Model.GetTranslation("17") *">
                    <div class="input-group-addon">
                        <i class="fa fa-euro fa-lg"></i>
                    </div>
                </div>
            </div>
            <!-- Detalles artículo -->
            <div class="col-xs-12 col-sm-12 form-group">
                <label for="inputContactMessage" class="txtMedio bold hidden">
                    @Model.GetTranslation("18") *</label>
                <textarea id="inputContactMessage" name="inputContactMessage" class="form-control input-lg"
                    rows="6" placeholder="@Model.GetTranslation("19")..."></textarea>
            </div>
            <!-- Añadir fotos -->
            @*<div class="col-xs-12 col-sm-12 form-group">
                <span class="btn btn-md btn-warning fileinput-button"><i class="fa fa-camera pr-5"></i>
                    <span>Añadir fotos...</span>
                    <input id="fileupload" type="file" name="files[]" multiple="" />
                </span>
            </div>*@
            <div class="row fileupload-buttonbar">
                <div class="col-lg-7 col-xs-12 col-sm-12 form-group">
                    <span class="btn btn-md btn-warning fileinput-button"><i class="fa fa-camera pr-5"></i>
                        <span>@Model.GetTranslation("20")...</span>
                        <input id="fileupload" type="file" name="files[]" multiple>
                    </span>@*<button type="button" class="btn btn-danger delete">
                        <i class="glyphicon glyphicon-trash"></i><span>Delete</span>
                    </button>*@
                    <!-- The global file processing state -->
                    <span class="fileupload-process"></span>
                </div>
                <!-- The global progress state -->
                <div class="col-lg-5 fileupload-progress fade">
                    <!-- The global progress bar -->
                    <div class="progress progress-striped active" role="progressbar" aria-valuemin="0"
                        aria-valuemax="100">
                        <div class="progress-bar progress-bar-success" style="width: 0%;">
                        </div>
                    </div>
                    <!-- The extended global progress state -->
                    <div class="progress-extended">
                        &nbsp;</div>
                </div>
            </div>
            <!-- The table listing the files available for upload/download -->
            <table id="photosList" role="presentation" class="table table-striped">
                <tbody class="files">
                </tbody>
            </table>
        </div>
    </div>
    <!-- Botón -->
    <div class="mb-50 text-center">
        <button type="submit" class="btn btn-lg btn-danger pl-30 pr-30 start">
            @Model.GetTranslation("21")</button>
    </div>
    </form>
</div>
<!-- The template to display files available for upload -->
<script id="template-upload" type="text/x-tmpl">
{% for (var i=0, file; file=o.files[i]; i++) { %}
    <tr class="template-upload fade">
        <td>
            <span class="preview"></span>
        </td>
        <td>
            <p class="name">{%=file.name%}</p>
            <strong class="error text-danger"></strong>
        </td>
        <td>
            <p class="size">Cargando...</p>
        </td>
        <td>
            <button class="start hidden" disabled>Start</button>
            {% if (!i) { %}
                <button class="btn btn-warning cancel">
                    <i class="glyphicon glyphicon-ban-circle"></i>
                    <span>Quitar</span>
                </button>
            {% } %}
        </td>
    </tr>
{% } %}
</script>
<!-- The template to display files available for download -->
<script id="template-download" type="text/x-tmpl">
@*{% for (var i=0, file; file=o.files[i]; i++) { %}
    <tr class="template-download fade">
        <td>
            <span class="preview">
                {% if (file.thumbnailUrl) { %}
                    <a href="{%=file.url%}" title="{%=file.name%}" download="{%=file.name%}" data-gallery><img src="{%=file.thumbnailUrl%}"></a>
                {% } %}
            </span>
        </td>
        <td>
            <p class="name">
                {% if (file.url) { %}
                    <a href="{%=file.url%}" title="{%=file.name%}" download="{%=file.name%}" {%=file.thumbnailUrl?'data-gallery':''%}>{%=file.name%}</a>
                {% } else { %}
                    <span>{%=file.name%}</span>
                {% } %}
            </p>
            {% if (file.error) { %}
                <div><span class="label label-danger">Error</span> {%=file.error%}</div>
            {% } %}
        </td>
        <td>
            <span class="size">{%=o.formatFileSize(file.size)%}</span>
        </td>
        <td>
            {% if (file.deleteUrl) { %}
                <button class="btn btn-danger delete" data-type="{%=file.deleteType%}" data-url="{%=file.deleteUrl%}"{% if (file.deleteWithCredentials) { %} data-xhr-fields='{"withCredentials":true}'{% } %}>
                    <i class="glyphicon glyphicon-trash"></i>
                    <span>Delete</span>
                </button>
                <input type="checkbox" name="delete" value="1" class="toggle">
            {% } else { %}
                <button class="btn btn-warning cancel">
                    <i class="glyphicon glyphicon-ban-circle"></i>
                    <span>Cancel</span>
                </button>
            {% } %}
        </td>
    </tr>
{% } %}*@
</script>
